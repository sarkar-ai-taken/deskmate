{
  "name": "sarkar-local-agent",
  "version": "1.0.0",
  "description": "Control your Mac from anywhere using natural language via Telegram or MCP. Powered by Claude Agent SDK.",
  "author": "Sarkar Local Agent Contributors",
  "license": "MIT",
  "homepage": "https://github.com/sarkar-ai-taken/sarkar-local-agent#readme",
  "bugs": {
    "url": "https://github.com/sarkar-ai-taken/sarkar-local-agent/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sarkar-ai-taken/sarkar-local-agent.git"
  },
  "keywords": [
