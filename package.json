{
  "name": "@sarkar-ai/deskmate",
  "version": "0.4.1",
  "description": "Control your local machine from anywhere using natural language via Telegram or MCP.",
  "author": "Deskmate Contributors",
  "license": "MIT",
  "homepage": "https://github.com/sarkar-ai-taken/deskmate#readme",
  "bugs": {
    "url": "https://github.com/sarkar-ai-taken/deskmate/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sarkar-ai-taken/deskmate.git"
  },
  "keywords": [
    "telegram",
    "bot",
    "ai",
    "agent",
    "remote",
    "macos",
    "linux",
    "cli",
    "assistant",
    "mcp",
    "automation",
    "desktop",
    "control"
  ],
  "main": "dist/index.js",
  "bin": {
    "deskmate": "./dist/cli.js",
    "deskmate-sidecar": "./dist/sidecar/cli.js"
  },
  "files": [
    "dist",
    "src/cli/tray-mac.swift",
    "README.md",
    "LICENSE",
    ".env.example",
    "install.sh",
    "uninstall.sh",
    "Dockerfile",
    "docker-compose.yml"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:mcp": "node dist/index.js mcp",
    "start:gateway": "node dist/index.js gateway",
    "start:both": "node dist/index.js both",
    "dev": "tsx src/index.ts",
    "dev:mcp": "tsx src/index.ts mcp",
    "sidecar": "node dist/cli.js sidecar",
    "test": "vitest run",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.6",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@sarkar-ai/deskmate": "^0.2.1",
    "dotenv": "^16.3.1",
    "grammy": "^1.21.1",
    "node-cron": "^3.0.3",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  }
}
